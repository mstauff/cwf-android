<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="1dp"
    android:paddingTop="1dp"
    android:paddingBottom="1dp"
    android:orientation="vertical"
    android:id="@+id/member_lookup_filter_container"
    tools:context="org.ldscd.callingworkflow.display.MemberLookupFilterFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/footer_buttons_height">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:textAlignment="center"
        android:layout_weight="4"
        android:textStyle="bold"
        android:textSize="20sp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/ldstools_black"
        android:text="@string/search_filters" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <TableRow>
            <FrameLayout
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingRight="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ldstools_black"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_medium"
                    android:fontFamily="@font/roboto"
                    android:layout_gravity="center_vertical"
                    android:text="@string/callings" />
            </FrameLayout>
            <FrameLayout
                android:layout_height="wrap_content"
                android:layout_width="50dp">
                <TextView
                    android:id="@+id/member_lookup_filter_calling_zero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:textSize="@dimen/text_size_small"
                    android:fontFamily="@font/roboto"
                    android:text="@string/zero" />
            </FrameLayout>
            <FrameLayout
                android:layout_height="wrap_content"
                android:layout_width="50dp">
                <TextView
                    android:id="@+id/member_lookup_filter_calling_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:textSize="@dimen/text_size_small"
                    android:fontFamily="@font/roboto"
                    android:text="@string/one" />
            </FrameLayout>
            <FrameLayout
                android:layout_height="wrap_content"
                android:layout_width="50dp">
                <TextView
                    android:id="@+id/member_lookup_filter_calling_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:textSize="@dimen/text_size_small"
                    android:fontFamily="@font/roboto"
                    android:text="@string/two"/>
            </FrameLayout>
            <FrameLayout
                android:layout_height="wrap_content"
                android:layout_width="50dp">
                <TextView
                    android:id="@+id/member_lookup_filter_calling_three_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:textSize="@dimen/text_size_small"
                    android:fontFamily="@font/roboto"
                    android:text="@string/three_plus" />
            </FrameLayout>
        </TableRow>
    </TableLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:textColor="@color/ldstools_black"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_medium"
                android:fontFamily="@font/roboto"
                android:text="@string/time_in_calling" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/member_lookup_filter_years_in_calling_label"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:textColor="@color/ldstools_gray"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:textSize="@dimen/text_size_small" />
        </TableRow>
    </TableLayout>
    <SeekBar
        android:id="@+id/member_lookup_filter_years_in_calling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:fontFamily="@font/roboto"
        android:max="10" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textColor="@color/ldstools_black"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_medium"
                android:fontFamily="@font/roboto"
                android:text="@string/age" />
            <TextView
                android:id="@+id/member_lookup_filter_twelve_to_seventeen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:padding="16dp"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="@font/roboto"
                android:text="@string/twelve_to_seventeen" />
            <TextView
                android:id="@+id/member_lookup_filter_eighteen_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="@font/roboto"
                android:text="@string/eighteen_plus" />
        </TableRow>
    </TableLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textColor="@color/ldstools_black"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_medium"
                android:fontFamily="@font/roboto"
                android:text="@string/gender" />
            <TextView
                android:id="@+id/member_lookup_filter_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:padding="16dp"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="@font/roboto"
                android:text="@string/male" />
            <TextView
                android:id="@+id/member_lookup_filter_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="@font/roboto"
                android:text="@string/female" />
        </TableRow>
    </TableLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/member_lookup_filter_priesthood_container">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/ldstools_black"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_medium"
                android:fontFamily="@font/roboto"
                android:text="@string/priesthood" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/member_lookup_filter_high_priest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:padding="16dp"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="@font/roboto"
                android:text="@string/high_priest" />
            <TextView
                android:id="@+id/member_lookup_filter_elder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="@font/roboto"
                android:text="@string/elder" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/member_lookup_filter_priest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:padding="16dp"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="@font/roboto"
                android:text="@string/priest" />
            <TextView
                android:id="@+id/member_lookup_filter_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="@font/roboto"
                android:text="@string/teacher" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/member_lookup_filter_deacon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:padding="16dp"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="@font/roboto"
                android:text="@string/deacon" />
        </TableRow>
    </TableLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/member_lookup_filter_relief_society_container">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/ldstools_black"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_medium"
                android:fontFamily="@font/roboto"
                android:text="@string/church_class" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/member_lookup_filter_relief_society"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:padding="16dp"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="@font/roboto"
                android:text="@string/relief_society" />
            <TextView
                android:id="@+id/member_lookup_filter_laurel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="@font/roboto"
                android:text="@string/laurel" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/member_lookup_filter_mia_maid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:padding="16dp"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="@font/roboto"
                android:text ="@string/mia_maid" />
            <TextView
                android:id="@+id/member_lookup_filter_beehive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="@font/roboto"
                android:text="@string/beehive" />
        </TableRow>
    </TableLayout>

    </LinearLayout>
    </ScrollView>

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@color/ldstools_gray_light" />

        <Button
            android:id="@+id/member_lookup_filter_done_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/footer_buttons_height"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/text_size_medium"
            android:fontFamily="@font/roboto"
            android:text="@string/done" />
    </LinearLayout>

</RelativeLayout>
