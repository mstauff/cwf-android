<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:background="@color/ldstools_gray_very_light"
                tools:context="org.ldscd.callingworkflow.display.SettingsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/settings_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/AppTheme.AppBarOverlay" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/settings_toolbar">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent">

            <TextView
                android:id="@+id/settings_lds_credentials_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:padding="12dp"
                android:background="@color/white"
                android:textColor="@color/ldstools_black"
                android:textSize="16dp"
                android:text="@string/lds_credentials"/>

            <TextView
                android:id="@+id/settings_sync_data_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:padding="15dp"
                android:background="@color/white"
                android:textColor="@color/ldstools_black"
                android:textSize="16dp"
                android:text="@string/manage_data"/>

            <TextView
                android:id="@+id/settings_edit_calling_status_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:padding="12dp"
                android:background="@color/white"
                android:textColor="@color/ldstools_black"
                android:textSize="16dp"
                android:text="@string/edit_calling_status"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>