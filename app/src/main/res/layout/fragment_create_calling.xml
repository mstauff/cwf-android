<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/label_new_calling_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            android:textColor="@color/ldstools_black"
            android:fontFamily="@font/roboto"
            android:text="@string/new_calling_label_position" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:background="@color/ldstools_gray_very_light"
            android:fontFamily="@font/roboto"
            android:id="@+id/new_calling_position_dropdown" />

        <TextView
            android:id="@+id/label_new_calling_proposed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/ldstools_black"
            android:textStyle="bold"
            android:fontFamily="@font/roboto"
            android:textSize="@dimen/text_size_medium"
            android:text="@string/new_calling_label_proposed" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/member_lookup_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="1dp"
                android:gravity="start"
                android:layout_weight="1.5"
                android:textColor="@color/ldstools_blue"
                android:textSize="@dimen/text_size_medium"
                android:fontFamily="@font/roboto"
                android:paddingLeft="10dp"
                android:background="@color/ldstools_gray_very_light" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/white"/>
            <ImageButton
                android:id="@+id/member_lookup_button"
                app:srcCompat="@drawable/ic_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight=".5"
                android:background="@color/ldstools_gray_very_light"
                android:paddingRight="0dp" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/select_status"
            android:textStyle="bold"
            android:textColor="@color/ldstools_black"
            android:textSize="@dimen/text_size_medium"
            android:fontFamily="@font/roboto"
            android:id="@+id/label_new_calling_status" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:background="@color/ldstools_gray_very_light"
            android:id="@+id/new_calling_status_dropdown" />
        <EditText
            android:id="@+id/new_calling_notes"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/text_size_medium"
            android:hint="@string/notes"
            android:fontFamily="@font/roboto"
            android:inputType="text|textMultiLine"
            android:background="#d2e9ff"
            android:gravity="top" />
    </LinearLayout>
</ScrollView>