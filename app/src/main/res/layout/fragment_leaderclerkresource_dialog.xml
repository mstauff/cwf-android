<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingBottom="@dimen/list_item_spacing_half"
    android:orientation="vertical"
    tools:context="org.ldscd.callingworkflow.display.LeaderClerkResourceDialogFragment"
    tools:listitem="@layout/fragment_leaderclerkresource_dialog_item">

    <TextView
        android:text="@string/update_calling_in_lcr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/list_item_spacing"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/app_theme_color"
        android:background="@drawable/bottom_separator"
        android:id="@+id/button_update_calling_in_lcr" />
    <TextView
        android:text="@string/release_current_in_lcr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/list_item_spacing"
        android:textAlignment="center"
        android:fontFamily="@font/roboto"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/app_theme_color"
        android:background="@drawable/bottom_separator"
        android:id="@+id/button_release_current_in_lcr" />
    <TextView
        android:text="@string/delete_calling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/list_item_spacing"
        android:textAlignment="center"
        android:fontFamily="@font/roboto"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/app_theme_color"
        android:background="@drawable/bottom_separator"
        android:id="@+id/button_delete_calling_in_lcr" />
    <TextView
        android:text="@string/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/list_item_spacing"
        android:textAlignment="center"
        android:fontFamily="@font/roboto"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/app_theme_color"
        android:id="@+id/button_cancel_update_lds_org"/>

</LinearLayout>
